<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_playList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:visibility="visible"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_200sdp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_expanded"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            app:layout_collapseMode="parallax"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:fitsSystemWindows="true"
                android:visibility="visible"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                />
            <Button
                android:id="@+id/btn_play"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/colorAccent_light"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/play"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:paddingEnd="@dimen/_20sdp"
                android:fontFamily="@font/montserrat_regular"
                android:drawableStart="@drawable/ic_play"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="center"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">
              <TextView
                  android:id="@+id/tv_hint"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_30sdp"
                  android:hint="@string/search_music"
                  android:textColor="@color/colorBlack"
                  android:text=""
                  android:visibility="gone"
                  android:textColorHint="@color/gray"
                  android:padding="@dimen/_3sdp"
                  android:textSize="@dimen/_15sdp"
                  android:gravity="center_vertical"
                  android:fontFamily="@font/montserrat_regular"
                  android:layout_weight="1"/>
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:inputType="text|textNoSuggestions"
                    app:defaultQueryHint="@string/search_music"
                    android:queryHint="@string/search_music"
                    android:iconifiedByDefault="true">
                    <requestFocus />
                </androidx.appcompat.widget.SearchView>
                <ImageView
                    android:id="@+id/iv_search_edit"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_search"
                    android:tint="@color/gray"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/gray"/>
         </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:background="@color/colorWhite"
                    android:focusableInTouchMode="true"
                    android:minHeight="@dimen/_200sdp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPlayList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@color/colorWhite"
                        >

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/txtNodata"
                        style="@style/textViewStyleReguler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/no_data_found"
                        android:textSize="@dimen/_20sdp"
                        android:visibility="gone" />
                </LinearLayout>
    </LinearLayout>


</LinearLayout>