<?xml version="1.0" encoding="utf-8"?>

<com.music.ca7s.utils.SwipeRevealLayout android:id="@+id/swipe_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragFromEdge="right"
    xmlns:card_view="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent_light"
                app:srcCompat="@drawable/ic_delete_playlist_gray"
                android:padding="@dimen/_9sdp"
                android:layout_weight="1"
                android:text="@string/delete"/>

            <ImageView
                android:id="@+id/edit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent_light"
                android:layout_weight="1"
                android:padding="@dimen/_9sdp"
                app:srcCompat="@drawable/ic_edit_playlist_gray"
                android:text="@string/edit"/>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
    <LinearLayout
        android:id="@+id/ll_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layout_weight="1"
   >


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_5sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_top_placeholder"
      />



    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorAccent_light"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/_3sdp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_regular"/>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:textColor="@color/colorAccent_light"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/add"
        />
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_gray"/>
</LinearLayout>

    </FrameLayout>

</com.music.ca7s.utils.SwipeRevealLayout>