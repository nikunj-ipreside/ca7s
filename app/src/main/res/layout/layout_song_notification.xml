<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/_3sdp"
    android:paddingRight="@dimen/_3sdp"
    android:paddingStart="@dimen/_3sdp"
    android:paddingLeft="@dimen/_3sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingTop="@dimen/_5sdp">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="@dimen/_50sdp"-->
<!--        android:layout_height="@dimen/_50sdp"-->
<!--        android:layout_marginEnd="@dimen/_6sdp"-->
<!--        android:layout_marginRight="@dimen/_6sdp"-->
<!--        android:background="@drawable/ic_top_placeholder"-->
<!--        android:visibility="visible">-->
    <ImageView
        android:id="@+id/imgSongImage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:background="@drawable/ic_top_placeholder"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@drawable/ic_top_placeholder" />
<!--    </androidx.cardview.widget.CardView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgPrevious"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_weight="1"
        android:src="@drawable/ic_play_preview_theme"
        />


    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/drawable_round_theme"
        app:srcCompat="@drawable/ic_play" />

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_weight="1"
        android:src="@drawable/ic_play_next_theme"
       />

            <ImageView
                android:id="@+id/imgclose"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/close_theme" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>