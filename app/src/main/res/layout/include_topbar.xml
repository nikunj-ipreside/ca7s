<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeTopBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_42sdp"
    android:background="@color/colorTopbar">

    <ImageView
        android:id="@+id/iv_close_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/txtTopbarTitle"
        style="@style/textViewStyleReguler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rel_right"
        android:layout_toRightOf="@+id/iv_close_player"
        android:gravity="center"
        android:maxLines="1"
        android:fontFamily="@font/montserrat_regular"
        android:text=" "
        android:textColor="@color/colorWhite" />

    <RelativeLayout
        android:id="@+id/rel_right"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">



        <ImageView
            android:id="@+id/imgTopbarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_notification"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="01"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_10sdp"
            android:textColor="#FFFFFF"
            android:background="@drawable/drawable_circle" />

    </RelativeLayout>
</RelativeLayout>

