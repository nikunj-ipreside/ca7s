<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            app:civ_border_width="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:civ_border_color="@color/colorAccent_light"
            android:src="@drawable/ic_top_placeholder" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_close" />


        <TextView
            android:id="@+id/tv_song_name"
            style="@style/textViewStyleReguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_marginTop="@dimen/_15sdp"
            android:singleLine="true"
            android:text="Song Name"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtArtistName"
            style="@style/textViewStyleReguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_song_name"
            android:maxLines="2"
            android:singleLine="false"
            android:fontFamily="@font/montserrat_regular"
            android:text="Artist Name "
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/txtTapToCopy"
            style="@style/textViewStyleReguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtArtistName"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:lines="1"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/drawable_text_round_background_filled_light"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/find_in_ca7"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>