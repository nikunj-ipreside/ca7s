<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:myServiceContext=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMenuProfile"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/ic_top_placeholder" />

    <TextView
        android:id="@+id/txtMenuName"
        style="@style/textViewStyleReguler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="Your Name"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txtMenuUserName"
        style="@style/textViewStyleReguler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:text="User Name"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_14sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            style="@style/textViewStyleReguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/i"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorTxtMenu"
            android:textSize="@dimen/_14ssp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_menu_heart" />

        <TextView
            android:id="@+id/txtMenuCity"
            style="@style/textViewStyleReguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Durban"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorTxtMenu"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <LinearLayout
        style="@style/viewLineStyle"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorLineMenu"
        android:visibility="gone" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNavDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        style="@style/textViewStyleReguler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/copyright_ca7s_2018_todos_os_direitos_reservados"
        android:textColor="@color/colorTxtSignUp"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>