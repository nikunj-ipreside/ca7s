<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
<!--    <item name="android:windowTranslucentNavigation">true</item>-->
<!--    <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--    <item name="android:windowNoTitle">true</item>-->


    <style name="WindowTitleBackground">
        <item name="background">@color/colorPrimary</item>
    </style>

        <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">


        </style>
    <style name="textViewStyleReguler">
        <item name="android:textColor">@color/colorEdtEmail</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <!--<item name="fontPath">@string/font_lato_reguler</item>-->
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="viewLineStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/colorEdtLine</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_30sdp</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor_color</item>
        <item name="android:textColor">@color/colorEdtEmail</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/colorLineMenu</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="fontPath">@string/font_lato_reguler</item>-->
    </style>
    <style name="editTextStyle_two">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor_color</item>
        <item name="android:textColor">@color/colorEdtEmail</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/colorLineMenu</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="fontPath">@string/font_lato_reguler</item>-->
    </style>
    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="fontPath">@string/font_cubano_reguler</item>-->
    </style>

    <!--ViewPager-->

    <style name="tabLayoutTextStyleRegylar">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

      <!--  &lt;!&ndash; inactive thumb color &ndash;&gt;
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        &lt;!&ndash; inactive track color (30% transparency) &ndash;&gt;
        <item name="android:colorForeground">#42221f1f
        </item>-->
    </style>

</resources>
